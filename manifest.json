{
  "manifest_version": 2,
  "name": "DDTSS Translator Helper",
  "version": "1.0",
  "description": "Suggerisce traduzioni per DDTSS usando un database locale",

  "content_scripts": [
    {
      "matches": ["*://ddtp.debian.org/ddtss/index.cgi/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],

  "browser_action": {
    "default_title": "DDTSS Helper"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "web_accessible_resources": [
    "database.json"
  ]
}
